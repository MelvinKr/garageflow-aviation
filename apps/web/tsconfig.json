{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@garageflow/ui": [
        "../../packages/ui/src"
      ],
      "@garageflow/db": [
        "../../packages/db/src"
      ],
      "@garageflow/ai": [
        "../../packages/ai/src"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ],
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next/types/**/*.ts",
    "src/store/mockState.ts",
    "src/data/mock.ts",
    "src/mock/**",
    "src/lib/printQuote.ts",
    "src/lib/printWo.ts",
    "src/app/api/**",
    "src/app/reports/**",
    "src/components/CustomerDrawer.tsx",
    "src/components/SupplierDrawer.tsx",
    "src/components/OutboxMount.tsx",
    "src/lib/generateWoFromTemplate.ts",
    "src/scripts/seed.ts"
  ]
}
